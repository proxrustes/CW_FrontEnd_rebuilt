@model CW_FrontEnd_rebuilt.ObjectModel.Character
@{
    ViewData["Title"] = "Character Profile";
}

    
    <div class="row py-5 px-4">
        <div class="col-md-5 mx-auto"> 
            <div class="bg-white shadow rounded overflow-hidden"> 

                <div class="px-4 py-5 my-5 text-center">
    <img src=@Model.imageLink class="rounded float-start" style='height: 100%; width: 100%; object-fit: contain'>
