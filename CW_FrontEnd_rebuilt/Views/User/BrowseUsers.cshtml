@using CW_FrontEnd_rebuilt.ObjectModel;


@model User[]
@{
    ViewData["Title"] = "Login Page";
}

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">BROWSE WAIFUS</h1>
        <p class="lead text-muted">user library</p>
      </div>
    </div>
  </section>


   

@for(int i = 0; i<Model.Length/3+1; i++)
    {
        int num_ident;
        if(Model.Length/3==i)
        {
        num_ident = Model.Length%3;
        }
        else{ num_ident = 3; }
        
  <div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @for(int y=0; y<num_ident; y++)
            {
                <div class="col">
          <div class="card shadow-sm">
                <img src=@Model[3*i+y].imageLink class="rounded float-start" alt="...">
            <div class="card-body">
              <p class="card-text">@Model[3*i+y].bio</p>
              <div class="d-flex justify-content-between align-items-center">
              </div>
              <div class="btn-group">
                   <button type="button" class="btn btn-light btn-sm">
                  <a href="https://adoptdndwaifus.azurewebsites.net/users/profile/@Model[3*i+y].userId" class="nav-link text-dark" >@Model[3*i+y].userName</a>
                  </button>
                </div>
               
            </div>
          </div>
        </div>
            }
            </div>
        </div>
      </div>
  
    }


