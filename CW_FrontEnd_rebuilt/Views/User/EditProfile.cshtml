@model CW_FrontEnd_rebuilt.ObjectModel.User;
@{
    ViewData["Title"] = "Edit Profile";
}
<main class="form-signin w-100 m-auto">
  <form asp-controller="User" asp-action="SEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <label asp-for="userName" for="floatingInput"></label>
      <input asp-for="userName"  class="form-control"value="@Model.userName" placeholder=@Model.userName>
      <span asp-validation-for="userName" class="text-danger"></span>
    </div>
    
    <div class="form-floating">
      <label asp-for="bio" for="floatingInput"></label>
      <input asp-for="bio" class="form-control"value="@Model.bio" placeholder="@Model.bio>
      <span asp-validation-for="bio" class="text-danger"></span>
    </div>

    <div class="form-floating">
      <label asp-for="password" for="floatingPassword"></label>
      <input asp-for="password" name="Password" type="text" class="form-control" value="@Model.password" placeholder=@Model.password>
      <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <label asp-for="imageLink" for="floatingPassword"></label>
      <input asp-for="imageLink" name="ImageLink" type="text" class="form-control" value="@Model.imageLink" placeholder=@Model.imageLink>
      <span asp-validation-for="password" class="text-danger"></span>
    </div>
   <div class="form-floating">
      <label asp-for="role" for="floatingPassword"></label>
      <input asp-for="role" name="Role" readonly="readonly" type="text" class="form-control" value="@Model.role">
    </div>
    <div class="form-floating">
      <label asp-for="characters" for="floatingPassword"></label>
      <input asp-for="characters" name="Role" readonly="readonly"  class="form-control" value="@Model.characters">
    </div>
     <div class="form-floating">
      <label asp-for="userId" for="floatingPassword"></label>
      <input asp-for="userId" name="UserId" type="number" readonly="readonly" class="form-control" value="@Model.userId" >
      <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
    <p class="mt-5 mb-3 text-muted">©2022</p>
  </form>
</main>
